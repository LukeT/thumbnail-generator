{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "sourceMap": true,
      "inlineSources": true,
      "sourceRoot": "/",
      "lib": [
        "es5",
        "es2015",
        "es2016",
        "es2017"
      ],
  
  
      "types": [
        "node",
      ],
      "experimentalDecorators": true,
      "allowJs": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "outDir": "dist"
    },
    "exclude": [
      "node_modules",
      "dist",
      "build"
    ]
  }